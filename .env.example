# AR Alphaya Jewellery - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# ===========================================
# AUTH0 CONFIGURATION
# ===========================================
# Get these from your Auth0 dashboard
AUTH0_SECRET=your-auth0-secret-here-min-32-chars
AUTH0_BASE_URL=https://your-domain.com
AUTH0_ISSUER_BASE_URL=https://your-tenant.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret

# ===========================================
# PAYHERE PAYMENT CONFIGURATION
# ===========================================
# Get these from your PayHere merchant dashboard
PAYHERE_MERCHANT_ID=your-merchant-id
PAYHERE_MERCHANT_SECRET=your-merchant-secret
NEXT_PUBLIC_PAYHERE_SANDBOX=true
NEXT_PUBLIC_PAYHERE_MERCHANT_ID=your-merchant-id

# ===========================================
# NEXT.JS CONFIGURATION
# ===========================================
NEXTAUTH_SECRET=your-nextauth-secret-min-32-chars
NEXTAUTH_URL=https://your-domain.com

# ===========================================
# NETLIFY CMS CONFIGURATION
# ===========================================
NETLIFY_IDENTITY_URL=https://your-site.netlify.app/.netlify/identity

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Generate a strong secret for session encryption
SESSION_SECRET=your-session-secret-min-32-chars

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# TESTING CONFIGURATION (for Playwright)
# ===========================================
# These are used only for testing - use test values
PLAYWRIGHT_BASE_URL=http://localhost:3000
