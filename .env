# Next.js Environment Variables Example
# Copy to .env.local for development

# Auth0 Configuration (Required for authentication)
AUTH0_SECRET="your-32-byte-secret-key"
AUTH0_BASE_URL="http://localhost:3000"
AUTH0_ISSUER_BASE_URL="https://your-tenant.auth0.com"
AUTH0_CLIENT_ID="your-auth0-client-id"
AUTH0_CLIENT_SECRET="your-auth0-client-secret"
AUTH0_SCOPE="openid profile email"

# GitHub Token (Required for admin product uploads)
# Create a personal access token at: https://github.com/settings/tokens
# Required permissions: repo (full control of private repositories)
GITHUB_TOKEN="ghp_your_github_personal_access_token"

# Site Configuration
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
NEXT_PUBLIC_SITE_NAME="AR Alphaya Jewellery"

# PayHere Payment Gateway
NEXT_PUBLIC_PAYHERE_MERCHANT_ID="your-merchant-id"
PAYHERE_MERCHANT_SECRET="your-merchant-secret"
NEXT_PUBLIC_PAYHERE_SANDBOX="true"  # Set to false for production

# Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"
NEXT_PUBLIC_GTM_ID="GTM-XXXXXXX"
